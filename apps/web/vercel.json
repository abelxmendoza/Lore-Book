{
  "installCommand": "rm -rf node_modules && npm ci --legacy-peer-deps",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_VERSION": "20",
    "VITE_USE_MOCK_DATA": "true",
    "VITE_SHOW_DEV_NOTICE": "true"
  }
}

