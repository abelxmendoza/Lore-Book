{
  "installCommand": "rm -rf node_modules && npm ci --legacy-peer-deps",
  "buildCommand": "npm run build && npm run test:build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "NODE_VERSION": "20",
    "VITE_USE_MOCK_DATA": "true",
    "VITE_SHOW_DEV_NOTICE": "true"
  }
}

